#version 460
in vec3 pos;

out vec3 FragmentPosition;
out vec3 FragmentUV;

uniform mat4 projection;
uniform mat4 model;
uniform mat4 view;


void main()
{
	//gl_Position = projection * view  * vec4( pos, 1.0);
	
	FragmentPosition =vec3(model * vec4(pos,1.0));
	FragmentUV = pos;
	gl_Position = projection * view * vec4( FragmentPosition, 1.0);
}